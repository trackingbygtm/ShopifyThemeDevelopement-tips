<section class="shopify-section section page-width" style="padding: {{ section.settings.padding_top }} {{ section.settings.padding_bottom }}; background-color: {{ section.settings.background_color }};">
  <div class="grid">
    <!-- Dynamic Content Blocks -->
    <div class="">
      {% for block in section.blocks %}
        <div class="block mb-6" style="padding-top: {{ block.settings.padding_top }}; padding-bottom: {{ block.settings.padding_bottom }};">
          {% if block.type == 'title' %}
            <h3 class="font-bold" style="font-size: {{ block.settings.font_size }}; color: {{ block.settings.text_color }};">
              {{ block.settings.title }}
            </h3>
          {% elsif block.type == 'subtitle' %}
            <p style="font-size: {{ block.settings.font_size }}; color: {{ block.settings.text_color }};">
              {{ block.settings.subtitle }}
            </p>
          {% elsif block.type == 'richtext' %}
            <div style="font-size: {{ block.settings.font_size }}; color: {{ block.settings.text_color }};">
              {{ block.settings.richtext }}
            </div>
          {% elsif block.type == 'button' %}
            <a
              href="{{ block.settings.button_url }}"
              class="inline-block rounded-lg"
              style="background-color: {{ block.settings.button_bg_color }}; color: {{ block.settings.button_text_color }}; font-size: {{ block.settings.font_size }}; 
                      padding: {{ block.settings.button_padding_top }} {{ block.settings.button_padding_right }} {{ block.settings.button_padding_bottom }} {{ block.settings.button_padding_left }};">
              {{ block.settings.button_text }}
            </a>
          {% elsif block.type == 'image' %}
            <img
              src="{{ block.settings.image | img_url: 'medium' }}"
              alt="Image"
              class="rounded-lg mx-auto"
              style="width: {{ block.settings.image_width }};">
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

